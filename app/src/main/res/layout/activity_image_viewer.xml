<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/ic_back" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/bottom"
        android:layout_alignParentTop="true"
        tools:src="@drawable/banner" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="val drawable = ContextCompat.getDrawable(this, R.drawable.banner)
drawable?.setBounds(0, 0, 100, 100) // width=100px, height=100px

textView.setCompoundDrawables(drawable, null, null, null)val drawable = ContextCompat.getDrawable(this, R.drawable.banner)
drawable?.setBounds(0, 0, 100, 100) // width=100px, height=100px

textView.setCompoundDrawables(drawable, null, null, null)" />


    </LinearLayout>

</RelativeLayout>